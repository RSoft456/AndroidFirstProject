<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="center"
android:padding="16dp"
tools:context=".BroadcastReceivers">

<TextView
    android:id="@+id/systemBroadcastTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="System Broadcast"
    android:textSize="18sp"
    android:textStyle="bold"
    android:layout_marginBottom="16dp"/>

<TextView
    android:id="@+id/customBroadcastTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Custom Broadcast"
    android:textSize="18sp"
    android:textStyle="bold"/>
    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="receive custom broadcast"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/blue"
        />

    <Button
        android:id="@+id/btnUnregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unregister both"
        android:layout_marginTop="200dp"
        android:backgroundTint="@color/blue"
        />
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register both"
        android:backgroundTint="@color/blue"
        />

</LinearLayout>
